<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EasyWaveGui.MainWindow"
        Title="EasyWave Station"
        WindowState="Maximized"
        SystemDecorations="None"
        Background="Black">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Border Grid.Row="0"
				Background="White"
				CornerRadius="5"
				Padding="10"
				Width="400"
				Height="100"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Center">
			<TextBlock Name="ResultText"
					   FontSize="16"
					   Foreground="Black"
					   TextWrapping="Wrap" />
		</Border>

		<Border Grid.Row="1"
				Height="20"
				Background="Transparent" />

		<Border Grid.Row="2"
				Background="White"
				CornerRadius="5"
				Padding="20"
				HorizontalAlignment="Center">
			<UniformGrid Columns="2"
						 Rows="2">
				<Button Name="BtnStart" Content="Start Test" Width="200" Height="60" Margin="10" />
				<Button Name="BtnListen" Content="Listen Notifications" Width="200" Height="60" Margin="10" />
				<Button Name="BtnStep"  Content="Next Step" Width="200" Height="60" Margin="10" />
				<Button Name="BtnReset" Content="Reset"      Width="200" Height="60" Margin="10" />
			</UniformGrid>
		</Border>
	</Grid>
</Window>
