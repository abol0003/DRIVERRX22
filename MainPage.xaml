<Page x:Class="InterfaceUNO.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White" Padding="20">

    <Page.Resources>
        <!-- Style global pour boutons agrandis -->
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="8,0,8,0"/>
        </Style>
    </Page.Resources>

    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Barre d'action -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Spacing="12">
            <Button Content="RunAsync" Click="OnRunAsyncClicked"/>
            <Button Content="Send" Click="OnSendClicked"/>
            <Button Content="GPIO Reset" Click="OnGpioResetClicked"/>
            <Button Content="Exit" Click="OnExitClicked"/>
        </StackPanel>

        <!-- Statut -->
        <Border Grid.Row="1" Margin="0,12,0,0"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="White"
                BorderThickness="1">
            <TextBlock x:Name="StatusText"
                       Text="Ready."
                       FontFamily="Consolas"
                       FontSize="18"/>
        </Border>

        <!-- Log -->
        <Border Grid.Row="2" Margin="0,16,0,0"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="6"
                Padding="8"
                Background="White">
            <ListView x:Name="LogList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   TextWrapping="Wrap"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
    </Grid>
</Page>
